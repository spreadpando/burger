<h1>Burgers!</h1>

<h2>Le Menu</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burger Graveyard</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block}}
    {{/if}}
    {{/each}}
</ul>

<h2>Make a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Name your Burger:</label>
        <input type="text" id="bname" name="name">
    </div>


    <button type="submit">Add Burger</button>
</form>